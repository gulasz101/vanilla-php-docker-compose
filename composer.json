{
    "name": "gulasz101/vanilla-php-boilerplate",
    "description": "Simple php projects starting point.",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard-prefixed": "^9.3",
        "phpstan/phpstan": "^0.12.85",
        "rector/rector": "^0.10.16"
    },
    "scripts": {
        "xdebug-disable": [
            "if [ -f /.dockerenv ] && [ \"\" != \"$(php -m | grep -i xdebug 2>&1)\" ] ; then rm -f /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini && echo OK ; fi"
        ],
        "xdebug-enable": [
            "if [ -f /.dockerenv ] && [ \"\" = \"$(php -m | grep -i xdebug 2>&1)\" ] ; then docker-php-ext-enable xdebug && echo OK ; fi"
        ],
        "ecs-fix": [
            "@xdebug-disable",
            "vendor/bin/ecs check src tests --fix",
            "@xdebug-enable"
        ],
        "ecs-check": [
            "@xdebug-disable",
            "vendor/bin/ecs check src tests",
            "@xdebug-enable"
        ],
        "phpstan" : [
            "@xdebug-disable",
            "vendor/bin/phpstan analyse",
            "@xdebug-enable"
        ],
        "rector-dry-run": [
            "@xdebug-disable",
            "vendor/bin/rector process src tests --dry-run",
            "@xdebug-enable"
        ],
        "rector": [
            "@xdebug-disable",
            "vendor/bin/rector process src tests",
            "@xdebug-enable"
        ],
        "php-lint": [
            "@xdebug-disable",
            "vendor/bin/parallel-lint --exclude vendor .",
            "@xdebug-enable"
        ],
        "test": [
            "@xdebug-disable",
            "vendor/bin/phpunit",
            "@xdebug-enable"
        ],
        "quality-checks": [
            "@xdebug-disable",
            "vendor/bin/parallel-lint --exclude vendor .",
            "vendor/bin/ecs check src tests",
            "vendor/bin/rector process src tests --dry-run",
            "vendor/bin/phpstan analyse",
            "@xdebug-enable"
        ]
    }
}
