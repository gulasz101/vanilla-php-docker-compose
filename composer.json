{
    "name": "gulasz101/vanilla-php-boilerplate",
    "description": "Simple php projects starting point.",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard-prefixed": "^9.3",
        "phpstan/phpstan": "^0.12.85",
        "rector/rector": "^0.10.16"
    },
    "scripts": {
        "ecs-fix": [
            "vendor/bin/ecs check --fix"
        ],
        "ecs-fix-dry-run": [
            "vendor/bin/ecs check"
        ],
        "phpstan" : [
            "vendor/bin/phpstan analyse"
        ],
        "rector-dry-run": [
            "vendor/bin/rector process src tests --dry-run"
        ],
        "rector": [
            "vendor/bin/rector process src tests"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
